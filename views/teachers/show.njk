

{% extends 'layout.njk' %}

{% block content%}

   <div class="card">
   <section class="details">
   <h3>Dados Pessoais</h3>
   
   <div class="item">
          <div>Teacher</div>
          <div>{{teacher.name}}</div>
   </div>

   <div class="item">
          <div>Idade</div>
          <div>{{teacher.age}}</div>
   </div>

   <div class="item">
          <div>Grau de escolaridade</div>
          <div>
             {{teacher.grau}}
          </div>
   </div>

    <div class="item">
          <div>Tipo de aula</div>
          <div>
             {{"Dist√¢ncia" if teacher.typeaula == "D" else "Presencial" }}
          </div>
   </div>

   <div class="item">
          <div>Acompanhamento</div>
          <div>
        {% for service in teacher.services%}
          <span>{{service}}</span>
        {%endfor%} 
          </div>
   </div>

   <div class="item">
          <div>Desde</div>
       <div>{{teacher.created_at}} </div>
   </div>
    <a href="/teachers/{{teacher.id}}/edit" class="button">Editar</a>
   </section>

   <section class="avatar" style="background: url({{teacher.avatar_url}}) no-repeat center center /cover">
   
   </section>
   

   
   </div>
{% endblock content%}
