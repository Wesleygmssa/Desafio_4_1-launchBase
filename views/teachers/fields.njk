            <div class="item">
                         <div>Avatar URL</div>
                         <div>
                            <input type="url"
                            name="avatar_url"
                            placeholder="http://"
                            value="{{teacher.avatar_url}}"
                            >
                         </div>
                 </div>
   
                 <div class="item">
                         <div>Teacher</div>
                         <div>
                            <input type="text"
                            name="name"
                             placeholder="Nome do Teacher"
                              value="{{teacher.name}}"
                            >
                         </div>
                 </div>

                 <div class="item">
                         <div>Data de nascimento</div>
                         <div>
                            <input type="date"
                            name="birth"
                             value="{{teacher.birth}}"
                            >
                         </div>
                  </div>

                <div class="item">
                    <div>Grau de escolaridade</div>
              <div>
                 
                 <select name= "grau">
                  
                  
                    <option value="medio"
                            {% if teacher.grau == "medio" %} selected  {%endif%}>
                            Ensino Médio Completo
                    </option>
                   
                    <option value="superior"{% if teacher.grau == "superior"%} selected {%endif%}> 
                             Ensino Superior Completo
                   </option>

                    <option value="Mestrado" {% if teacher.grau == "Mestrado "%} selected {%endif%}>
                              Mestrado
                     </option>

                    <option value="Doutorado" {% if teacher.grau == "Doutorado "%} selected {%endif%}>
                              Doutorado
                     </option>
              </select>
              
            </div>
       </div> 

               <div class="item">
                     <div>Tipo de aula</div>
                      <div>
                            <span><input type="radio" name="typeaula" value="P"
                             {% if teacher.typeaula == 'P' %} 
                                 checked
                             {%endif%}>Presencial</span>
                             <span><input type="radio" name="typeaula" value="D" 
                             {% if teacher.typeaula == 'D' %} 
                                 checked
                               {%endif%}>Distância</span>
                      </div>
                </div>

                    <div class="item">
                           <div>Area de atuação</div>
                           <div>
                              <input type="text" 
                              name="services" 
                              placeholder="Separe os serviços prestado por virgula"
                              value="{{teacher.services}}">
                           </div>
                    </div>
        <button type="submit">Salvar</button>
         </section>

   
   <section class="avatar"
    style="background: url({{teacher.avatar_url}}) no-repeat center center /cover"></section>