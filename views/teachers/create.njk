{% extends 'layout.njk' %}

{% block content%}
   

   <form class="card" method="post" action="/teachers"> 
         <section class="details">
             <h3>Novo Professor</h3>

                  <div class="item">
                         <div>Avatar URL</div>
                         <div>
                            <input type="url"
                            name="avatar_url"
                            placeholder="http://"
                            >
                         </div>
                 </div>
   
                 <div class="item">
                         <div>Teacher</div>
                         <div>
                            <input type="text"
                            name="name"
                             placeholder="Nome do Teacher"
                            >
                         </div>
                 </div>

                 <div class="item">
                         <div>Data de nascimento</div>
                         <div>
                            <input type="date"
                            name="birth"
                            >
                         </div>
                  </div>

                <div class="item">
          <div>Grau de escolaridade</div>
              <div>
                 <select name= "grau">
                    <option value="medio" selected>Ensino Médio Completo</option>
                    <option value="superior"> Ensino Superior Completo</option>
                    <option value="Mestrado">Mestrado</option>
                    <option value="Doutorado">Doutorado</option>
              </select>
            </div>
       </div> 

               <div class="item">
                     <div>Tipo de aula</div>
                      <div>
                            <span><input type="radio" name="typeaula" value="P" checked>Presencial</span>
                             <span><input type="radio" name="typeaula" value="D">Distância</span>
                      </div>
                </div>

                    <div class="item">
                           <div>Area de atuação</div>
                           <div>
                              <input type="text" name="services" placeholder="Separe os serviços prestado por virgula">
                           </div>
                    </div>
        <button type="submit">Salvar</button>
         </section>

   
   <section class="avatar" style="background: url('https://source.unsplash.com/collection/8491653/500x500') no-repeat center center /cover"></section>
   
   
   
   </form>
{% endblock content%}