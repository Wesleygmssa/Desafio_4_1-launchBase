            <div class="item">
                         <div>Avatar URL</div>
                         <div>
                            <input type="url"
                            name="avatar_url"
                            placeholder="http://"
                            value="{{student.avatar_url}}"
                            >
                         </div>
                 </div>
   
                 <div class="item">
                         <div>Teacher</div>
                         <div>
                            <input type="text"
                            name="name"
                             placeholder="Nome do Teacher"
                              value="{{student.name}}"
                            >
                         </div>
                 </div>

                 <div class="item">
                         <div>Data de nascimento</div>
                         <div>
                            <input type="date"
                            name="birth"
                             value="{{student.birth}}"
                            >
                         </div>
                  </div>

                <div class="item">
                    <div>Grau de escolaridade</div>
              <div>
                 
                   <select name="grau" >
                     <option value="medio"
                         {% if student.grau =="medio"%} selected {%endif%}>
                           Ensino médio completo
                      </option>
                     <option value="superior"
                         {% if student.grau =="superior"%} selected {%endif%}>
                           Ensino superior completo
                      </option>
                     <option value="mestrado"
                         {% if student.grau =="mestrado"%} selected {%endif%}>
                           Mestrado completo
                      </option>
                     <option value="doutorado"
                         {% if student.grau =="doutorado" %} selected {%endif%}>
                           Doutorado completo
                      </option>

                  </select>
              
            </div>
       </div> 

               <div class="item">
                     <div>Tipo de aula</div>
                      <div>
                            <span><input type="radio" name="typeaula" value="P"
                             {% if student.typeaula == 'P' %} 
                                 checked
                             {%endif%}>Presencial</span>
                             <span><input type="radio" name="typeaula" value="D" 
                             {% if student.typeaula == 'D' %} 
                                 checked
                               {%endif%}>Distância</span>
                      </div>
                </div>

                    <div class="item">
                           <div>Area de atuação</div>
                           <div>
                              <input type="text" 
                              name="services" 
                              placeholder="Separe os serviços prestado por virgula"
                              value="{{student.services}}">
                           </div>
                    </div>
        <button type="submit">Salvar</button>
      
      
   

   
